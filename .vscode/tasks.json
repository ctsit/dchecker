{
    "version": "2.0.0",
    "tasks": [
        {
            // Create a python virtual environment when the folder is opened
            "label": "Create python venv",
            "type": "shell",
            "command": "python3 -m venv .venv",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen",
            }
        }
    ]
}
